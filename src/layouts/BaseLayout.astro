---
const { pathname } = Astro.url;
const isProjetos = pathname.includes('/projetos');
const titulo = isProjetos ? 'Criando' : 'Bem-vindo';
---

<div class="loading-bar"></div>
<div class="container">
  <header class="header">
    <a href="/" class="logo">{titulo}</a>
    <nav class="nav">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/projetos">Projetos</a></li>
      </ul>
    </nav>
  </header>
  <slot />
</div>

<style is:global>
  .btn {
    border-radius: 80px;
  }
  
  .loading-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, transparent, #3b82f6, transparent);
    transform: translateX(-100%);
    animation: loading 2s ease-in-out;
    z-index: 9999;
  }
  
  @keyframes loading {
    0% { transform: translateX(-100%); }
    50% { transform: translateX(0%); }
    100% { transform: translateX(100%); }
  }
  
  .container {
    max-width: 64rem;
    margin: 0 auto;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    gap: 2.25rem;
    padding: 2rem 2.5rem;
    animation: fadeIn 0.6s ease-out;
  }
  
  @media (min-width: 768px) {
    .container {
      gap: 5rem;
      padding: 4rem 2.5rem;
    }
  }
  
  .header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-bottom: 1.25rem;
  }
  
  @media (min-width: 768px) {
    .header {
      flex-direction: row;
      justify-content: space-between;
      gap: 0.5rem;
      padding-bottom: 0;
    }
  }
  
  .logo {
    font-size: 1.25rem;
    line-height: 1.75rem;
  }
  
  .nav {
    font-size: 0.875rem;
    line-height: 1.25rem;
    padding-top: 0.5%;
  }
  
  .nav ul {
    display: flex;
    align-items: center;
    white-space: nowrap;
    min-height: min-content;
  }
  
  .nav li {
    display: flex;
    align-items: center;
  }
  
  .nav a {
    display: flex;
    cursor: pointer;
    align-items: center;
  }
  
  .nav a:hover {
    text-decoration: underline;
  }
  
  .nav li + li:before {
    content: "/";
    margin: 0 0.5rem 0 0.75rem;
    opacity: 0.4;
  }
  
  @keyframes fadeIn {
    from { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
  
  .card-animate {
    animation: cardIn 0.6s ease-out both;
  }
  
  .card-animate:nth-child(1) { animation-delay: 0.1s; }
  .card-animate:nth-child(2) { animation-delay: 0.2s; }
  .card-animate:nth-child(3) { animation-delay: 0.3s; }
  .card-animate:nth-child(4) { animation-delay: 0.4s; }
  
  @keyframes cardIn {
    from { 
      opacity: 0; 
      transform: translateY(30px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
</style>
