---
import { ViewTransitions } from "astro:transitions";
import { TITULO_SITE, DESCRICAO_SITE, OG_TITULO, OG_DESCRICAO, OG_TIPO, OG_IMAGE } from "../consts";
import BaseLayout from "./BaseLayout.astro";
---

<!doctype html>
<html class="bg-base-100 text-base-content overflow-y-scroll" lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icon.png" />
    <title>{TITULO_SITE}</title>
    <meta name="description" content={DESCRICAO_SITE} />
    <meta property="og:title" content={OG_TITULO} />
    <meta property="og:description" content={OG_DESCRICAO} />
    <meta property="og:type" content={OG_TIPO} />
    <meta property="og:image" content={OG_IMAGE} />
    <meta property="og:url" content={Astro.request.url} />
    <ViewTransitions />
  </head>
  <body>
    <BaseLayout>
      <slot />
    </BaseLayout>
  </body>
</html>
