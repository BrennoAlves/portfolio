---
import ProjetosLayout from "../layouts/Projetos.astro";
import { projetosPreenchido } from "../consts";
---

<ProjetosLayout>
  <main>
    <div class="flex flex-col gap-12">
      <h1 class="text-3xl">Projetos</h1>
      <div class="grid gap-8 md:grid-cols-2">
        {Object.entries(projetosPreenchido.projetos).map(([nome, projeto]) => (
          <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
            <div class="card-body p-6">
              <div class="flex items-start justify-between mb-3">
                <h2 class="card-title text-xl font-semibold">{nome}</h2>
                <div class="badge badge-primary badge-sm">Dataclix</div>
              </div>
              
              <p class="text-base-content/70 text-sm leading-relaxed mb-4">
                Projeto desenvolvido com tecnologias modernas, focado em performance, 
                escalabilidade e experiência do usuário.
              </p>
              
              <div class="flex flex-wrap gap-2 mb-6">
                {projeto.tags.map((tag, index) => (
                  <div class={`badge badge-outline ${
                    index % 4 === 0 ? 'badge-primary' :
                    index % 4 === 1 ? 'badge-secondary' :
                    index % 4 === 2 ? 'badge-accent' : 'badge-info'
                  }`}>
                    {tag}
                  </div>
                ))}
              </div>
              
              <div class="card-actions justify-end">
                <a 
                  href={projeto.url} 
                  target="_blank" 
                  rel="noopener" 
                  class="btn btn-primary btn-sm gap-2"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    <polyline points="15,3 21,3 21,9"></polyline>
                    <line x1="10" y1="14" x2="21" y2="3"></line>
                  </svg>
                  Ver Projeto
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
</ProjetosLayout>
